<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.blog.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <argument
            android:name="catId"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="loggedOut"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_nav_home_to_nav_post"
            app:destination="@id/nav_post" />
    </fragment>

    <fragment
        android:id="@+id/nav_all_blogs"
        android:name="com.example.blog.ui.allBlogs.AllBlogsFragment"
        android:label="@string/menu_all_blogs"
        tools:layout="@layout/fragment_all_blogs" >
        <action
            android:id="@+id/action_nav_all_blogs_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_bloggers"
        android:name="com.example.blog.ui.bloggers.BloggersFragment"
        android:label="@string/menu_bloggers"
        tools:layout="@layout/fragment_bloggers" />

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.example.blog.ui.category.CategoriesFragment"
        android:label="@string/menu_categories"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_nav_categories_to_nav_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
        <argument
            android:name="catId"
            app:argType="integer"
            android:defaultValue="-1" />

            </action>
    </fragment>

<!--    <fragment-->
<!--        android:id="@+id/nav_share"-->
<!--        android:name="com.example.blog.ui.share.ProfileFragment"-->
<!--        android:label="@string/menu_share"-->
<!--        tools:layout="@layout/activity_profile" />-->

    <activity
        android:id="@+id/nav_register"
        android:name="com.example.blog.RegisterActivity"
   />

    <activity
        android:id="@+id/nav_login"
        android:name="com.example.blog.LoginActivity"

        />

    <action
        android:id="@+id/nav_logout"
       app:destination="@+id/nav_home"

        >
        <argument android:defaultValue="true"
            android:name="loggedOut" />

    </action>


    <fragment
        android:id="@+id/nav_post"
        android:name="com.example.blog.ui.home.ExpandedPostFragment"
        android:label=""
        tools:layout="@layout/expanded_post"/>


    <activity
        android:id="@+id/nav_profile"
        android:name="com.example.blog.ProfileActivity"
        />


<!--    <fragment-->
<!--        android:id="@+id/nav_send"-->
<!--        android:name="com.example.blog.ui.send.SendFragment"-->
<!--        android:label="@string/menu_send"/>-->
<!--        tools:layout="@layout/activity_write_post" />-->
</navigation>