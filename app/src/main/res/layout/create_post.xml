<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button2"
                android:fontFamily="@font/myfont"
                android:text="رجوع"
                android:textSize="24dp"
                android:padding="10dp"
               android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                />
            <Button
                android:id="@+id/addCatBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_button2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="الاصناف"
                android:textAlignment="center"
                android:fontFamily="@font/myfont"
                android:gravity="right|center"
                android:textSize="24dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_expand_more_black_24dp"
                />
        <Button
            android:id="@+id/sendPostBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/bg_button2"
            android:fontFamily="@font/myfont"
            android:padding="10dp"
            android:text="ارسال"
            android:drawableRight="@drawable/ic_menu_send"
            android:drawablePadding="10dp"
            android:textSize="24dp"
           />
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <EditText
                android:id="@+id/titleEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="العنوان"
                android:fontFamily="@font/myfont"
                android:textSize="25dp"
                android:textDirection="rtl"
                android:padding="10dp"
                android:background="@drawable/bg_edittext"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
           >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/detailsEditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:hint="التفاصيل"
                        android:padding="10dp"
                        android:gravity="top"
                        android:background="@drawable/bg_edittext"
                        android:textSize="25dp"
                        android:minHeight="300dp"
                        android:textDirection="rtl"/>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>



        </com.google.android.material.textfield.TextInputLayout>


<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="80dp"-->
<!--            android:src="@drawable/aqlamdefault"-->
<!--            />-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_button2"
            android:text="upload image from galary"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>